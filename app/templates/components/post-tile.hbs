<div class="row">
  <div class="col s6">
    <div class="card">
      <div class="card-image">
        <img src={{post.image}} alt={{post.title}}>
      </div>
      <div class="card-content">
        <p>{{post.date}}</p>
      </div>
      <div class="card-action">
        <a>{{#link-to 'post' post.id}}{{post.title}}{{/link-to}}</a>
      </div>
    </div>
  </div>
</div>
